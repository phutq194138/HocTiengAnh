<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/yellow_01"
    tools:context=".activity.SortCharacter">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quan sát hình ảnh và chọn đáp đúng"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/color_orange_conner_15"
        android:padding="50dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_conner_15dp">

        <TextView
            android:id="@+id/tv_question_watch_and_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Câu hỏi 1/20"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@color/green_01"
            android:padding="10dp"
            android:gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/img_question_sort"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"/>

    </RelativeLayout>

</LinearLayout>