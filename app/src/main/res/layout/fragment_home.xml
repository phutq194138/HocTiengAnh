<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_3"
    android:gravity="center">

    <Button
        android:id="@+id/btn_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_fragment_home"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_book"
        android:drawableTint="#673AB7"
        android:stateListAnimator="@null"
        android:textColor="#673AB7"
        android:text="Từ vựng"/>

    <Button
        android:id="@+id/btn_watch_and_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_fragment_home"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_eye"
        android:drawableTint="#4CAF50"
        android:stateListAnimator="@null"
        android:textColor="#4CAF50"
        android:text="Đọc"/>

    <Button
        android:id="@+id/btn_listen_and_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_fragment_home"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_volume"
        android:drawableTint="#00BCD4"
        android:textColor="#00BCD4"
        android:stateListAnimator="@null"
        android:text="Nghe"/>

    <Button
        android:id="@+id/btn_watch_and_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_fragment_home"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_name"
        android:drawableTint="#FFC107"
        android:textColor="#FFC107"
        android:stateListAnimator="@null"
        android:text="Viết"/>

    <Button
        android:id="@+id/btn_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_fragment_home"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_video"
        android:drawableTint="#E91E63"
        android:textColor="#E91E63"
        android:stateListAnimator="@null"
        android:text="Video"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_sort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Sắp xếp"/>

</LinearLayout>