<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bogoctron">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_score_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score: 15/20"
            android:textSize="25sp"
            android:fontFamily="@font/uvn"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_result_test"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_done_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:fontFamily="@font/uvn"
            android:textAllCaps="false"
            android:textColor="#00FF00"
            android:background="@drawable/button_try_again"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"/>

    </LinearLayout>

</LinearLayout>