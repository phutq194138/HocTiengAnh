<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_02"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_crown_name_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người tuyết"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_crown_store"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/snowman"/>

        <Button
            android:id="@+id/btn_buy_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:textColor="#FFFF00"
            android:fontFamily="@font/uvn"
            android:drawableStart="@drawable/ic_star"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableTint="@color/yellow_01"
            android:background="@drawable/button_buy_store"
            android:stateListAnimator="@null"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>