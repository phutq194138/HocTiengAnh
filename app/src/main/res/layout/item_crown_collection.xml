<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_02"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_crown_name_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người tuyết"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_crown_collection"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/snowman"/>

        <TextView
            android:id="@+id/tv_use_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sử dụng"
            android:fontFamily="@font/uvn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:background="@drawable/button_use_2"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>